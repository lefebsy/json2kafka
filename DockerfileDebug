FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-alpine AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-alpine AS build
WORKDIR /src
COPY ["Json2Kafka.csproj", "./"]
RUN dotnet restore "Json2Kafka.csproj" -r linux-musl-x64
COPY . .
WORKDIR "/src/."
RUN dotnet build "Json2Kafka.csproj" -c Release -o /app/build -r linux-musl-x64 --runtime alpine-x64

FROM build AS publish
RUN dotnet publish "Json2Kafka.csproj" -c Release -o /app/publish -r linux-musl-x64 --runtime alpine-x64

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Json2Kafka.dll"]
